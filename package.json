{
  "name": "ts-match",
  "version": "1.1.6",
  "description": "A small matching library for TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/index.js",
    "lib/index.d.ts"
  ],
  "scripts": {
    "build": "tsc --pretty --project .",
    "biome:check": "biome check",
    "biome:ci": "biome ci .",
    "biome:format": "biome format --write lib/ test/ biome.json",
    "biome:lint": "biome lint lib/ test/",
    "biome:lint:fix": "biome lint --write lib/ test/",
    "test": "yarn build && node --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whymarrh/ts-match.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whymarrh/ts-match/issues"
  },
  "homepage": "https://github.com/whymarrh/ts-match#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.10.2",
    "typescript": "5.7.2"
  }
}
